{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "quotemark": [
      true,
      "single"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ],
    "interface-name": false,
    "ordered-imports": [
      true,
      {
        "groups": [
          "^.",
          "^@",
          "^\\.\\.",
          "^\\."
        ],
        "ordered-imports": true
      }
    ],
    "object-literal-sort-keys": true
  }
}
