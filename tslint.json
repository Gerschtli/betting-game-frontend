{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "quotemark": [
      true,
      "single"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ],
    "interface-name": false,
    "ordered-imports": [
      true,
      {
        "grouped-imports": true,
        "groups": [
          {
            "match": "^@babel/polyfill$",
            "order": 0
          },
          {
            "match": "^@",
            "order": 20
          },
          {
            "name": "parent_dir",
            "match": "^[.][.]",
            "order": 30
          },
          {
            "name": "current dir",
            "match": "^[.]",
            "order": 40
          },
          {
            "match": ".*",
            "order": 10
          }
        ],
        "ordered-imports": true
      }
    ],
    "object-literal-sort-keys": true
  }
}
